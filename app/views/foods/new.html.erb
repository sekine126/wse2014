<html>
<head>
	<LINK rel="stylesheet" type="text/css" href="new.css">
    <style type="text/css">
    html,body {
        height:100%;
    }
    #wrap {
        height:100%;
        min-height:300px;
        position: relative;
    }
    #footer {
        position: absolute;
        width:100%;
        height:40px;
        bottom:30px;
        background-color: #999;
    }
    </style>
</head>
<body>
<h1>foods/new</h1>

<%= form_tag('/values/new') do %>

    <ul class="tabs">

        <% @categorys.each do |category| %>
            <% str = "tab" + category.to_s %>
            <li>
                <input type="radio" name="tabs" id=<%= str %> 
                <% if category == FD_CATEGORY_MEAT %>
                    <%= 'checked' %>
                <% end %> />
                <label for=<%= str %>><%= @cat_name[category - 1] %></label>
                <% str = "tab-content" + category.to_s %>
                <div id=<%= str %> class="tab-content">
                  <p class="wrap">
                    <% @foods.each do |food| %>
                        <% if food[:category] == category %>
                            <%= check_box_tag "select[]", food[:id] %>
                            <%= food[:name] %><br>
                        <% end %>
                    <% end %>
                    <%= button_tag :type => "submit", :class =>"btn btn-default" do %>
                      次へ
                    <% end %>
                </div>
            </li>
        <% end %>
    </ul>

<% end %>
</body>
</html>
