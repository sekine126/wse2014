<div class="container">
  <div class="row">
    <div class="col-md-4">
      <%= image_tag 'test/test.jpg', :width=>350 %>
    </div>
    <div class="col-md-4">
      <h2 style="margin-top:0px"><strong>作り方</strong></h2>
      <div class="procedure-list">
        <dl>
          <% @procedures.each do |procedure| %>
            <div class="procedure-entry">
              <dt>手順<%= procedure.number %></dt>
              <dd>
              <%= procedure.detail %>
              <% if procedure.play%>
                （<%= procedure.min_text %>分<%= procedure.sec_text %>秒）
              <% end %>
              </dd>
            </div>
          <% end %>
        </dl>
      </div>
    </div>
  </div><!-- .row -->
</div><!-- .container --> 
