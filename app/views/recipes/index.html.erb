<div class="title">
  <h1><strong>タイタニック角煮（仮）</strong><small>＜レシピを検索＞</small></h1>
</div>

<%= form_tag recipes_path, :method => 'get' do %>
  <div class="form-search">
    <%= text_field_tag :search, params[:search], :size=>50 %>
    <button type="search" class="btn btn-primary btn-search">検索</button>
  </div>
<% end %>

<div class="recipe-thumbnails">
  <ul class="thumbnails">
    <% @recipes.each do |recipe| %>
      <div class="thumbnail-block">
        <%= link_to recipe_path(recipe) do %>
          <div class="thumbnail">
            <% if recipe.image.present? then %>
              <%= image_tag recipe.image.url(:thumb) %>
            <% else %>
              <%= image_tag "noimage.jpg" %>
            <% end %>
            <div class="caption">
              <strong><%= recipe.name %></strong>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </ul>
</div>
