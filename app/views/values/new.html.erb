
<h1>食材量の入力</h1>

<%= form_tag ('/procedures/new') do %>

  <% @foods.each do |food| %>

  	<%= food[:name] %>:
  	<%# 以下送信データ %>
  	<%= text_field_tag "value[][val]" %><br>


  	<%= hidden_field_tag "food_id[]", food[:id] %>
  	<%= hidden_field_tag "value[][food_id]", food[:id] %>
  	<%= hidden_field_tag "value[][name]", food[:name] %>
  	<%= hidden_field_tag "value[][category]", food[:category] %>
    <%= hidden_field_tag "from_value", true %>
  <% end %>
  <br>
  
  <%= button_tag :type => "submit", :class =>"btn btn-primary" do %>
    次へ
  <% end %>

 <% end %>
